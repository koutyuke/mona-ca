{
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "commit-message-editor.dynamicTemplate": [
    "{type}{scope}{breaking_change_exclamation}: {description}",
    "",
    "{body}",
    "",
    "{breaking_change_footer}{footer}"
  ],
  "commit-message-editor.staticTemplate": ["label: emoji (scope) short-description", "", "body", "", "footer"],
  "commit-message-editor.tokens": [
    {
      "combobox": true,
      "description": "Type of changes.",
      "label": "Type",
      "name": "type",
      "options": [
        {
          "label": "✨ feat (機能: 新規)",
          "description": "Implementation of new features.",
          "value": "✨ feat"
        },
        {
          "label": "🎈 feat (機能: 更新)",
          "description": "Repair of existing features.",
          "value": "🎈 feat"
        },
        {
          "label": "🪦 feat (機能: 削除)",
          "description": "Deletion of features.",
          "value": "🪦 feat"
        },
        {
          "label": "🐛 fix (修正)",
          "description": "Bug fixes.",
          "value": "🐛 fix"
        },
        {
          "label": "🔥 hotfix (修正: 緊急)",
          "description": "Critical bug fixes or major changes.",
          "value": "🔥 hotfix"
        },
        {
          "label": "📝 doc (ドキュメント)",
          "description": "Documentation changes.",
          "value": "📝 doc"
        },
        {
          "label": "💄 style (スタイル)",
          "description": "Code Style Changes. (e.g. white-space, formatting, rename, typo, etc)",
          "value": "💄 style"
        },
        {
          "label": "♻️ refactor (リファクタリング)",
          "description": "Code Refactoring Changes.",
          "value": "♻️ refactor"
        },
        {
          "label": "🏎️ perf (パフォーマンス)",
          "description": "Performance Improvement for Changes.",
          "value": "🏎️ perf"
        },
        {
          "label": "🧪 test (テスト)",
          "description": "Test cases changes.",
          "value": "🧪 test"
        },
        {
          "label": "📦️ build (ビルド)",
          "description": "Build system or dependency changes.(e.g. npm, lock file, etc)",
          "value": "📦️ build"
        },
        {
          "label": "🦺 ci (継続的インテグレーション)",
          "description": "Continuous Integration Configuration File Changes.",
          "value": "🦺 ci"
        },
        {
          "label": "🚀 cd (継続的デリバリー)",
          "description": "Continuous Delivery Configuration File changes.",
          "value": "🚀 cd"
        },
        {
          "label": "🔧 chore (雑務)",
          "description": "Other changes that don't modify src or test files.",
          "value": "🔧 chore"
        },
        {
          "label": "⚙️ chore (雑務: 設定)",
          "description": "Configuration changes.",
          "value": "⚙️ chore"
        },
        {
          "label": "🛠️ chore (雑務: スクリプト)",
          "description": "Development script changes.",
          "value": "🛠️ chore"
        },
        {
          "label": "📦 chore (雑務: 依存関係)",
          "description": "Update dependencies.",
          "value": "📦 chore"
        },
        {
          "label": "🗑 chore (雑務: 削除)",
          "description": "Removal of files or code.",
          "value": "🗑 chore"
        },
        {
          "label": "⏪️ revert (取り消し)",
          "description": "Reversion of changes.",
          "value": "⏪️ revert"
        },
        {
          "label": "🐳 container (コンテナ)",
          "description": "The Dockerfile changes.",
          "value": "🐳 container"
        },
        {
          "label": "🐙 compose (コンポーズ)",
          "description": "The docker-compose changes.",
          "value": "🐙 compose"
        },
        {
          "label": "🚧 wip (開発途中)",
          "description": "Changes that will be squashed.",
          "value": "🚧 wip"
        },
        {
          "label": "🎉 initial (ファーストコミット)",
          "description": "The first commit.",
          "value": "🎉 initial"
        }
      ],
      "type": "enum"
    },
    {
      "name": "breaking_change_exclamation",
      "label": "Breaking Change (Exclamation)",
      "description": "Indicates that this commit is a Breaking Change. (e.g. 'feat!: ...')",
      "type": "boolean",
      "value": "!",
      "default": false
    },
    {
      "name": "scope",
      "label": "Scope",
      "description": "Scope of Changes. (e.g. api, mobile, web, etc)",
      "prefix": "(",
      "suffix": ")",
      "type": "text"
    },
    {
      "name": "description",
      "label": "Short Description",
      "description": "Commit summary.",
      "type": "text"
    },
    {
      "name": "body",
      "label": "Body",
      "description": "Detailed description of commit.",
      "type": "text",
      "lines": 5,
      "maxLines": 10,
      "multiline": true
    },
    {
      "label": "Breaking Change (Footer)",
      "name": "breaking_change_footer",
      "type": "boolean",
      "value": "BREAKING CHANGE: ",
      "default": false
    },
    {
      "name": "footer",
      "label": "Footer",
      "description": "Description of disruptive changes or signature.",
      "type": "text",
      "multiline": true
    }
  ],
  "commit-message-editor.view.defaultView": "form",
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "npm.packageManager": "bun",
  "svg.preview.background": "transparent",
  "tailwindCSS.experimental.classRegex": [
    ["tv\\(([\\s\\S]*?)\\);", "[\"']([^\"']*).*?[\"']"],
    ["twMerge\\(([\\s\\S]*?)\\);", "[\"']([^\"']*).*?[\"']"],
    ["tv\\(([\\s\\S]*?)\\)", "[\"']([^\"']*).*?[\"']"],
    ["twMerge\\(([\\s\\S]*?)\\)", "[\"']([^\"']*).*?[\"']"],
    ["twPseudo\\(([^)]*)\\)", "[\"']([^\"']*).*?[\"']"],
    ["[A-Za-z_][A-Za-z0-9_]*ClassName\\s*[:=]\\s*{?[\"'`]([^\"'`]*).*?[\"'`]"],
    ["[A-Za-z_][A-Za-z0-9_]*ClassName\\s*[:=]\\s*{?`([^`]*).*?`", "[\"']([^\"']*).*?[\"']"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "workbench.editor.customLabels.enabled": true,
  "workbench.editor.customLabels.patterns": {
    "**/apps/api/**": "${filename}.${extname} ← API",
    "**/apps/mobile/**": "${filename}.${extname} ← MOBILE",
    "**/apps/web/**": "${filename}.${extname} ← WEB",
    "**/packages/**": "${filename}.${extname} ← PACKAGE",
    "**/packages/core/**": "${filename}.${extname} ← CORE",
    "**/packages/ui/**": "${filename}.${extname} ← UI",
    "**/tools/**": "${filename}.${extname} ← TOOL"
  }
}
