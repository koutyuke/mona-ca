{
  "name": "mona-ca",
  "private": true,
  "repository": {
    "type": "GitHub",
    "url": "https://github.com/koutyuke/mona-ca"
  },
  "workspaces": ["apps/*", "packages/*", "tools/*"],
  "scripts": {
    "build": "turbo build",
    "check": "turbo check",
    "check:fix": "turbo check:fix",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "api": "cd ./apps/api && bun",
    "catalog": "cd ./apps/catalog && bun",
    "web": "cd ./apps/web && bun",
    "mobile": "cd ./apps/mobile && bun",
    "core": "cd ./packages/core && bun",
    "ui": "cd ./packages/ui && bun"
  },
  "dependencies": {
    "@types/bun": "^1.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "lefthook": "^1.10.10",
    "turbo": "^2.3.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.1.26",
  "trustedDependencies": [
    "@biomejs/biome",
    "@swc/core",
    "better-sqlite3",
    "core-js",
    "core-js-pure",
    "es5-ext",
    "esbuild",
    "lefthook",
    "workerd"
  ],
  "overrides": {
    "@scalar/types": "0.1.5"
  },
  "patchedDependencies": {
    "elysia@1.2.25": "patches/elysia@1.2.25.patch"
  }
}
