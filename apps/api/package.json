{
  "name": "@mona-ca/api",
  "version": "0.1.0",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev ./src/routes/index.ts",
    "check": "biome check --error-on-warnings --no-errors-on-unmatched",
    "check:fix": "bun run check --write",
    "build": "wrangler deploy --dry-run --outdir .wrangler/dist",
    "start": "wrangler dev dist/index.js",
    "test": "vitest --run",
    "test:w": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "gen:types": "wrangler types ./types/worker-configuration.d.ts",
    "db:gen": "drizzle-kit generate",
    "db:mig": "wrangler d1 migrations apply mona-ca_db --local",
    "db:std": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio --config drizzle.studio.config.ts",
    "db:std:remote": "drizzle-kit studio"
  },
  "dependencies": {
    "@elysiajs/cors": "~1.4.0",
    "@elysiajs/openapi": "~1.4.11",
    "@mona-ca/argon2id": "workspace:*",
    "@mona-ca/core": "workspace:*",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.6",
    "arctic": "^3.6.0",
    "drizzle-orm": "~0.44.2",
    "elysia": "~1.4.17",
    "resend": "^4.2.0",
    "ulid-workers": "^2.1.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.12",
    "@mona-ca/tsconfig": "workspace:*",
    "better-sqlite3": "^11.9.1",
    "drizzle-kit": "~0.31.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "~3.2.0",
    "wrangler": "^4.9.1"
  }
}
