{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "formatter": {
    "ignore": ["node_modules", "dist"],
    "formatWithErrors": false,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all",
      "arrowParentheses": "asNeeded"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space"
    },
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "ignore": ["node_modules", "dist", ".next", ".turbo", ".expo"],
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessConstructor": "off",
        "noUselessFragments": "error",
        "useArrowFunction": "error"
      },
      "style": {
        "noDefaultExport": "error",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noConsoleLog": "warn"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn", 
          "options": {
            "attributes": ["className"],
            "functions": ["twMerge"]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "include": ["**/*.config.ts", "apps/web/src/app/**", "apps/web/src/middleware.ts", "apps/mobile/src/app/**"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
